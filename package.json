{
  "name": "p-map-lite",
  "version": "1.1.2",
  "license": "MIT",
  "description": "A lightweight(180 bytes) p-map version for daily promsise uses.",
  "repository": "rocktimsaikia/p-map-lite",
  "funding": "https://www.buymeacoffee.com/rocktimcodes",
  "author": {
    "name": "Rocktim Saikia",
    "email": "rocktimthedev@gmail.com",
    "url": "https://rocktimcodes.site"
  },
  "main": "dist/index.js",
  "module": "dist/p-map-lite.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "postversion": "git push && git push --tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "husky": "^6.0.0",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=10"
  },
  "size-limit": [
    {
      "path": "dist/p-map-lite.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/p-map-lite.esm.js",
      "limit": "10 KB"
    }
  ]
}
